---

export type Props = {title:string}
const {title} = (Astro.props as Props)

---


<html lang="en">

	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
		<meta name="viewport" content="width=device-width"/>
		<title>{title}</title>

		<style>
			html,
			body{
				height: 100%;
			}

			body{
				display:         flex;
				align-items:     center;
				justify-content: center;
				margin:          0;
			}
		</style>
	</head>

	<body>
		<slot/>
	</body>

</html>
